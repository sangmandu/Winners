<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_item"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="3dp"
    card_view:cardCornerRadius="8dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"

        card_view:cardElevation="0dp"
        card_view:cardCornerRadius="5dp">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/comp_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/comp_sample_image"
                android:scaleType="centerCrop"/>

            <RelativeLayout
                android:id="@+id/comp_delete"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#80000000"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">
                <ImageView
                    android:id="@+id/iv_delete"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_close"
                    android:paddingBottom="15dp"
                    android:tint="#fff"/>
                <TextView
                    android:id="@+id/tv_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="삭제하기"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:textSize="18sp"
                    android:layout_alignBottom="@id/iv_delete"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_below="@id/comp_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/comp_date"
                    android:paddingStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00/00"
                    android:textColor="#80000000"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/comp_name"
                    android:layout_marginHorizontal="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="대회 이름"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/comp_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상세보기 >"
                    android:textColor="#80000000"
                    android:textSize="15sp"
                    android:background="@android:color/transparent"
                    android:stateListAnimator="@null"/>
            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>