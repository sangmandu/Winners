<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TabActivity.TabCompete"
    android:background="@color/colorPrimary">
    <RelativeLayout
        android:background="@color/colorPrimaryDark"
        android:id="@+id/comp_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/upd_comp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="새로 고침"
            android:background="@android:color/transparent"
            android:stateListAnimator="@null"
            android:layout_toStartOf="@id/del_comp"/>

        <Button
            android:id="@+id/del_comp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF1919"
            android:text="대회 삭제"
            android:background="@android:color/transparent"
            android:stateListAnimator="@null"
            android:layout_toStartOf="@id/add_comp"/>

        <Button
            android:id="@+id/add_comp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:layout_centerHorizontal="true"
            android:text="대회 추가"
            android:background="@android:color/transparent"
            android:stateListAnimator="@null"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:layout_below="@id/comp_menu"/>

</RelativeLayout>