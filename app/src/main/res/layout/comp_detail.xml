<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    android:id="@+id/nested_scroll"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CompActivity">

        <RelativeLayout
            android:id="@+id/info_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <LinearLayout
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/buttons">
                <TextView
                    android:id="@+id/comp_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="예시 000 대회"
                    android:textSize="30sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:maxLines="1"/>
                <TextView
                    android:layout_marginHorizontal="10dp"
                    android:id="@+id/comp_date"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0000/00/00 00:00AM"
                    android:textColor="#000"/>
                <TextView
                    android:layout_marginHorizontal="10dp"
                    android:id="@+id/comp_web"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="https://www.example.co.kr"
                    android:autoLink="web"
                    android:ellipsize="end"
                    android:maxLines="1"/>
                <LinearLayout
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="나의 신청 상태:"
                        android:textColor="#000"/>
                    <TextView
                        android:paddingStart="5dp"
                        android:id="@+id/comp_mystat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="대기 중"
                        android:textColor="#BF000000"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttons"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true">
                <Button
                    android:id="@+id/yes_i_can"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="참가"/>
                <Button
                    android:id="@+id/no_i_cant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="불참"/>
            </LinearLayout>
        </RelativeLayout>



        <LinearLayout
            android:id="@+id/map_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_box"
            android:orientation="vertical"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_map"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:text="대회 위치"
                    android:textSize="20sp"
                    android:textColor="#000"/>
            </LinearLayout>
            <fragment
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/map_box"
            android:orientation="vertical"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_notice"/>
                <TextView
                    android:id="@+id/comp_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:text="공지사항"
                    android:textSize="20sp"
                    android:textColor="#000"/>
            </LinearLayout>
            <TextView
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:id="@+id/comp_notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="예시 공지사항"
                android:textColor="#000"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ppl_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/notice"
            android:orientation="vertical"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_poll"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:text="현재 인원 현황"
                    android:textSize="20sp"
                    android:textColor="#000"/>
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/yes_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/yes_title"
                    android:paddingStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="참가"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/yes_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="확장"
                    android:textColor="#80000000"
                    android:layout_weight="1"
                    android:gravity="end"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/yes_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:overScrollMode="never"/>

            <LinearLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/no_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/no_title"
                    android:paddingStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="불참"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/no_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="확장"
                    android:textColor="#80000000"
                    android:layout_weight="1"
                    android:gravity="end"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/no_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <LinearLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/idk_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/idk_title"
                    android:paddingStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="대기 중"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/idk_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="확장"
                    android:textColor="#80000000"
                    android:layout_weight="1"
                    android:gravity="end"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/idk_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
        </LinearLayout>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>